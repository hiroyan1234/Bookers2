<h1>User info</h1>

<%= form_with model: @user do |f| %>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
  
  <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>

  <%= f.label :introduction, "Introduction" %>
  <%= f.text_area :introduction %>
  
  <%= f.submit "Update User" %>
<% end %>
