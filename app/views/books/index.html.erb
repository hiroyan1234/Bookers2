<div class="container">
  <%= render 'users/list', user:@user, book:@book %>
  <h1>Books </h1>
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= book.title %></td>
          <td><%= book.opinion %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

