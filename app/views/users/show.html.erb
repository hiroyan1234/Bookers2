<h1>User info</h1>

<div>
  <%= image_tag @user.get_profile_image(100,100)%>
  <div>
    <h3>name</h3>
    <h3><%= @user.name %></h3>
  </div>
  <div>
    <h3>introduction</h3>
    <h3><%= @user.introduction %></h3>
  </div>
</div>

<h3>Books</h3>
<% @book.each do |book| %>
  <div>
    
    <%= link_to user_path(book.id) do %>
      <%= image_tag @user.get_profile_image(100,100) %>
    <% end %>
    <%= link_to book.title, book_path(current_user.id) %>
    <%= book.opinion %>
  </div>
<% end %>



