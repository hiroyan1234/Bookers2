<div class="col-lg-3">
  <h2>User info</h2>
  <%= image_tag user.get_profile_image(100,100)%>
  <table class="table">
    <tbody> 
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
    </tbody>
  </table>
  <div class="row">
    <%= link_to "", edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-block" %>
  </div>
  <h2>New book</h2>
  <%= form_with model: book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
    <%= f.submit "CreateBook" %>
  <% end %>
</div>